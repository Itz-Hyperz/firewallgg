<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>FirewallGG - Search</title>
        <link rel="icon" href="/assets/logo.png">
    </head>
    <body>
        <%- include('_header') %>
        <div class="container text-white text-start bg-dark" style="border-radius: 1em;">
            <br>
            <h1 style="font-weight: 700;">Results: <%= searchId %></h1>
            <br>
            <% if(bannedList.length >= 1) { %>
                <div class="container">
                    <% bannedList.forEach(function(ban) { %>
                        <div class="row dbInfos bg-secondary" style="border-color: <%= ban.themeColor %>; border-width: 0.1em; border-style: solid;">
                            <h2 style="font-weight: 700; text-align: center; color: <%= ban.themeColor %>"><%= ban.database %></h2>
                            <p><span style="font-weight: 700;">Active:</span> <%= ban.active %></p>
                            <p><span style="font-weight: 700;">Reason:</span> <%= ban.reason %></p>
                            <p><span style="font-weight: 700;">Proof:</span> <%= ban.proof %></p>
                            <p><span style="font-weight: 700;">Time:</span> <%= ban.time %></p>
                        </div>
                        <br>
                        <hr>
                        <br>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="alert alert-success" role="alert">
                    This user is not currently banned!
                </div>
            <% } %>
            <br>
        </div>
        <%- include('_footer') %>
    </body>
</html>